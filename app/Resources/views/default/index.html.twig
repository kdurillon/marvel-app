{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for character in characters %}
                <div class="col-md-3">
                    <div class="card">
                        <img class="card-img-top" src="{{ character.thumbnail.StandardLarge }}" alt="{{ character.name }}">
                        <div class="card-block">
                            <h4 class="card-title">{{ character.name }}</h4>
                            <p class="card-text">{{ character.description }}</p>
                            <a href="/character/{{ character.id }}" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                </div>
                {#{% if (loop.index is divisible by(4)) %}#}
                    {#</div>#}
                    {#<div class="row">#}
                {#{% endif %}#}
            {% endfor %}
        </div>
    </div>
{% endblock %}

