{% extends 'base.html.twig' %}


{% block jumbotron %}
    <div class="jumbotron">
        <h1>{{ character.name }}</h1>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <img class="col-md-4" src="{{ character.thumbnail.Detail }}" alt="{{ character.name }}">
        <div class="col-md-8">
            <p class="card-text">{{ character.description }}</p>
        </div>
    </div>
{% endblock %}